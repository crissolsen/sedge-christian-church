---
export interface Props {
	post: any;
}

const { post } = Astro.props;
---

<article class="py-4">
	<p class="text-sm text-gray-400">{post.frontmatter.publishDate}</p>
	<a href={post.url}><h3>{post.frontmatter.title}</h3></a>
	<!-- <p>{post.frontmatter.description}</p> -->
	<p>{post.rawContent}</p>
	<a href={post.url}>Read more</a>
</article>

<style>
	.content :global(main > * + *) {
		/* margin-top: 1rem; */
	}

	.post-preview {
		margin-bottom: 2rem;
		border-bottom: 4px solid var(--theme-divider);
	}

	header {
		align-items: flex-start;
		display: flex;
		flex-direction: column;
		justify-content: center;
		text-align: left;
	}

	.title,
	.author,
	.publish-date {
		margin: 0;
	}

	.publish-date,
	.author {
		font-size: 1.25rem;
		color: var(--theme-text-lighter);
	}

	.title {
		font-size: 2.25rem;
		font-weight: 700;
		color: var(--theme-text);
	}
</style>
